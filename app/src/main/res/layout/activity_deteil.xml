<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2EBEB"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#A27878">

        <Button
            android:id="@+id/bekbtn"
            android:layout_width="wrap_content"
            android:layout_height="15pt"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/BackBtn"
            android:textColor="#FFFFFF"
            android:text="@string/BackText">
        </Button>

        <ImageView
            android:id="@+id/detailIMG"
            android:layout_height="256dp"
            android:layout_width="256dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/detailName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Название"
        android:textSize="24sp"
        android:textStyle="bold" >
    </TextView>




    <TextView
        android:id="@+id/detailPryse"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="0.0 ₽"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="#000000">
    </TextView>

    <TextView
        android:id="@+id/detailDescription"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Описание товара"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="32dp">
        </TextView>



        <Button
            android:id="@+id/buybtn"
            android:layout_width="wrap_content"
            android:layout_height="20pt"
            android:layout_gravity="right"
            android:backgroundTint="@color/Bacgmain"
            android:textStyle="bold"
            android:text="@string/DetailBtn">

        </Button>


    </LinearLayout>



</ScrollView>